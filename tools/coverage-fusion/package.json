{
  "name": "coverage-fusion",
  "license": "MIT",
  "bin": "./dist/index.js",
  "main": "index.js",
  "version": "3.1.1",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hxtree/galaxyops.git"
  },
  "bugs": {
    "url": "https://github.com/hxtree/galaxyops/issues"
  },
  "scripts": {
    "start": "ts-node ./src/index.ts",
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest --runInBand",
    "test:cov": "jest --coverage --runInBand",
    "lint": "eslint --format visualstudio \"./{stacks,src}/*.ts\"  --fix",
    "lint:ci": "eslint --format visualstudio \"./{stacks,src}/*.ts\"  --fix-dry-run",
    "depcheck": "npx depcheck"
  },
  "keywords": [
    "code cov",
    "badge",
    "coverage report",
    "pnpm",
    "code coverage",
    "monorepo",
    "rushjs",
    "nx"
  ],
  "dependencies": {
    "@galaxyops/base-nodejs": "workspace:*",
    "@types/istanbul-reports": "~3.0.1",
    "commander": "^12.1.0",
    "istanbul-lib-coverage": "~3.2.0",
    "istanbul-lib-report": "~3.0.0",
    "istanbul-reports": "~3.1.5"
  },
  "devDependencies": {
    "@galaxyops/eslint-config": "workspace:*",
    "@types/jest": "29.5.12",
    "@types/node": "20.11.25",
    "eslint": "8.57.0",
    "jest": "29.7.0",
    "ts-jest": "29.1.2",
    "ts-node": "10.9.2",
    "typescript": "5.3.3"
  }
}
